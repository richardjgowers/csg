inversedir = ${datadir}/votca/scripts/inverse

inverse_files = csg_table imcdata_from_blocks.octave linsolve.m linsolve.octave CsgFunctions.pm

inverse_DATA = MD5SUM $(inverse_files)

EXTRA_DIST = ${inverse_SCRIPTS} $(inverse_files) Makefile.am.in

MD5SUM: ${inverse_SCRIPTS} ${inverse_files}
	THIS_DIR=`pwd` && \
	cd ${srcdir} && \
	md5sum ${inverse_SCRIPTS} $(inverse_files) > $$THIS_DIR/MD5SUM

CLEANFILES = MD5SUM *~

###END Makefile.am###
.PHONY: Makefile.am
Makefile.am: Makefile.am.in
	echo 'inverse_SCRIPTS = \' > $@
	ls *.sh *.pl | sed -e 's/.*/\t& \\/' -e '$$s/\\$$//' >> $@
	echo >> $@
	sed '/^###END Makefile.am###/,$$d' $< >> $@

